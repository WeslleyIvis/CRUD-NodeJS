<h1>Postagens</h1>
<a href="/cadastro"><button>Nova Postagem</button></a>
<section class="block-posts">
    {{#each posts}}
            <div class="content-post">
                <small>{{dataValues.createdAt}}</small>
                <h1>{{dataValues.titulo}}</h1>
                <p>{{dataValues.conteudo}}</p>
                
                <button value="{{dataValues.id}}">Deletar</button>    
                <a href="/editar/{{dataValues.id}}"><button>Editar</button></a>
            </div>
           
    {{/each}}
</section>

<script> 
    $(document).ready(() => {
        $('button[value]').on('click', event => {
            $.ajax({
                url: `/deletar?id=${event.target.value}`,
                type: 'DELETE',
                success: (data) => {
                    console.log(data);
                    document.location.reload(true)
                }
            })
        })
    })
</script>
